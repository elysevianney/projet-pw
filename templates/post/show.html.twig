{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ post.adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ post.city }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ post.experience }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ post.salary }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Relation</th>
                <td>{{ post.relation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}">back to list</a>

