{% extends 'base.html.twig' %}

{% block title %}Dev{% endblock %}

{% block body %}
    <h1>Dev</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dev.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ dev.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ dev.firstname }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ dev.adress }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ dev.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ dev.city }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ dev.experience }}</td>
            </tr>
            <tr>
                <th>MinimumSalay</th>
                <td>{{ dev.minimumSalay }}</td>
            </tr>
            <tr>
                <th>Biography</th>
                <td>{{ dev.biography }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ dev.avatar }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ dev.telephone }}</td>
            </tr>
            <tr>
                <th>PublicProfile</th>
                <td>{{ dev.publicProfile ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dev_index') }}">back to list</a>

    <a href="{{ path('app_dev_edit', {'id': dev.id}) }}">edit</a>

    {{ include('dev/_delete_form.html.twig') }}

     
				
                <!-- row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="profile card card-body px-3 pt-3 pb-0">
                            <div class="profile-head">
                                <div class="photo-content">
                                    <div class="cover-photo"></div>
                                </div>
                                <div class="profile-info">
									<div class="profile-photo">
										<img src="{{ asset('asset/images/profile/profile.png') }}" class="img-fluid rounded-circle" alt="">
									</div>
									<div class="profile-details">
										<div class="profile-name px-3 pt-2">
											<h4 class="text-primary mb-0">{{ dev.lastname }} {{ dev.firstname }}</h4>
											<p>Développeur | {{ dev.adress }}</p>
										</div>
										<div class="profile-email px-2 pt-2">
											<h4 class="text-muted mb-0">{{dev.user.email}}</h4>
											<p>Email</p>
										</div>
						
									</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-4">
						<div class="row">
							<div class="col-xl-12">
								<div class="card">
									<div class="card-body">
										<div class="profile-statistics">
											<div class="text-center">
												<div class="row">
													<div class="col">
														<h3 class="m-b-0">150</h3><span>Nombre de vues de profil</span>
													</div>
													<div class="col">
														<h3 class="m-b-0">140</h3><span>Année d'expérience</span>
													</div>
													<div class="col">
														<h3 class="m-b-0">45</h3><span>Note</span>
													</div>
												</div>
												<div class="mt-4">
													<a href="javascript:void(0);" class="btn btn-primary mb-1 me-1">Donner une Note</a> 
													<a href="javascript:void(0);" class="btn btn-primary mb-1" data-bs-toggle="modal" data-bs-target="#sendMessageModal">Donner une Not</a>
												</div>
											</div>
											<!-- Modal -->
											<div class="modal fade" id="sendMessageModal">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title">Send Message</h5>
															<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
														</div>
														<div class="modal-body">
															<form class="comment-form">
																<div class="row"> 
																	<div class="col-lg-6">
																		<div class="mb-3">
																			<label class="text-black font-w600 form-label">Name <span class="required">*</span></label>
																			<input type="text" class="form-control" value="Author" name="Author" placeholder="Author">
																		</div>
																	</div>
																	<div class="col-lg-6">
																		<div class="mb-3">
																			<label class="text-black font-w600 form-label">Email <span class="required">*</span></label>
																			<input type="text" class="form-control" value="Email" placeholder="Email" name="Email">
																		</div>
																	</div>
																	<div class="col-lg-12">
																		<div class="mb-3">
																			<label class="text-black font-w600 form-label">Comment</label>
																			<textarea rows="8" class="form-control" name="comment" placeholder="Comment"></textarea>
																		</div>
																	</div>
																	<div class="col-lg-12">
																		<div class="mb-3 mb-0">
																			<input type="submit" value="Post Comment" class="submit btn btn-primary" name="submit">
																		</div>
																	</div>
																</div>
															</form>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							
						</div>
                    </div>
                    <div class="col-xl-8">
                        <div class="card">
                            <div class="card-body">
                                <div class="profile-tab">
                                    <div class="custom-tab-1">
                                        <ul class="nav nav-tabs">
                                            <li class="nav-item"><a href="#my-posts" data-bs-toggle="tab" class="nav-link active show">A propos de moi</a>
                                            </li>
                                            <li class="nav-item"><a href="#about-me" data-bs-toggle="tab" class="nav-link">Biographie</a>
                                            </li>
                                        
                                        </ul>
                                        <div class="tab-content">
                                            <div id="my-posts" class="tab-pane fade active show">
                                                <div class="profile-skills mb-5 mt-5">
                                                    <h4 class="text-primary mb-2">Techonologies maîtrisées</h4>
                                                    {% for techno in dev.technos %}
                                                    <a href="javascript:void(0);" class="btn btn-primary light btn-xs mb-1">{{techno.name}}</a>
                                                    {% endfor %}
                                                    </div>
                                                <div class="profile-lang  mb-5">
                                                    <h4 class="text-primary mb-2">Langues maîtrisées</h4>
													<a href="javascript:void(0);" class="text-muted pe-3 f-s-16"><i class="flag-icon flag-icon-fr"></i> Français</a> 
													<a href="javascript:void(0);" class="text-muted pe-3 f-s-16"><i class="flag-icon flag-icon-us"></i> French</a>
                                                </div>
                                                <div class="profile-personal-info">
                                                    <h4 class="text-primary mb-4">Informations personnelles</h4>
                                                    <div class="row mb-2">
                                                        <div class="col-sm-3 col-5">
                                                            <h5 class="f-w-500">Name <span class="pull-end">:</span>
                                                            </h5>
                                                        </div>
                                                        <div class="col-sm-9 col-7"><span>{{ dev.lastname }} {{ dev.firstname }}</span>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-2">
                                                        <div class="col-sm-3 col-5">
                                                            <h5 class="f-w-500">Email <span class="pull-end">:</span>
                                                            </h5>
                                                        </div>
                                                        <div class="col-sm-9 col-7"><span>{{ dev.user.email }}</span>
                                                        </div>
                                                    </div>
                                
                                                    <div class="row mb-2">
                                                        <div class="col-sm-3 col-5">
                                                            <h5 class="f-w-500">Contact <span class="pull-end">:</span>
                                                            </h5>
                                                        </div>
                                                        <div class="col-sm-9 col-7"><span>{{ dev.telephone }}</span>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-2">
                                                        <div class="col-sm-3 col-5">
                                                            <h5 class="f-w-500">Ville <span class="pull-end">:</span></h5>
                                                        </div>
                                                        <div class="col-sm-9 col-7"><span>{{ dev.city }}</span>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-2">
                                                        <div class="col-sm-3 col-5">
                                                            <h5 class="f-w-500">Experience <span class="pull-end">:</span></h5>
                                                        </div>
                                                        <div class="col-sm-9 col-7"><span>{{ dev.experience }}  ans</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="about-me" class="tab-pane fade">
                                                <div class="profile-about-me">
                                                    <div class="pt-4 border-bottom-1 pb-3">
                                                        
                                                        <p>{{ dev.biography }}</p>
                                                    </div>
                                                </div>
                                                
                                            </div>
                                            <div id="profile-settings" class="tab-pane fade">
                                                
                                            </div>
                                        </div>
                                    </div>
									<!-- Modal -->
									<div class="modal fade" id="replyModal">
										
									</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
{% endblock %}